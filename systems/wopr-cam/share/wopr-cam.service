[Unit]
Description=WOPR Camera FastAPI Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=wopr
Group=wopr
WorkingDirectory=/home/wopr/systems/wopr-cam/app
EnvironmentFile=/home/wopr/.config/wopr/.env
ExecStart=/usr/bin/uvicorn app:app --host 0.0.0.0 --port 5000
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target